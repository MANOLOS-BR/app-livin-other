<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item_faq"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/shape_card_corner_white"
    android:padding="12dp">

    <TextView
        android:id="@+id/text_organ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:gravity="start"
        android:text="Nome orgÃ£o"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_text_queue_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Fila de espera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/text_organ"
        app:layout_constraintTop_toBottomOf="@+id/text_organ" />

    <TextView
        android:id="@+id/text_queue_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorIndigo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_text_queue_amount"
        app:layout_constraintStart_toStartOf="@+id/lbl_text_queue_amount"
        app:layout_constraintTop_toBottomOf="@+id/lbl_text_queue_amount" />

    <TextView
        android:id="@+id/lbl_text_number_transplants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Transplantes realizados"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_queue_amount" />

    <TextView
        android:id="@+id/text_number_transplants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorIndigo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_text_number_transplants"
        app:layout_constraintStart_toStartOf="@+id/lbl_text_number_transplants"
        app:layout_constraintTop_toBottomOf="@+id/lbl_text_number_transplants" />

</androidx.constraintlayout.widget.ConstraintLayout>