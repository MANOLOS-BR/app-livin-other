<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item_faq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/shape_card_corner_white"
    android:padding="12dp">

    <ImageView
        android:id="@+id/image_organ"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_broken_image_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_organ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Nome orgÃ£o"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/image_organ"
        app:layout_constraintStart_toStartOf="@+id/image_organ"
        app:layout_constraintTop_toBottomOf="@id/image_organ" />

    <TextView
        android:id="@+id/text_organ_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="00 horas"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_organ"
        app:layout_constraintStart_toStartOf="@+id/text_organ"
        app:layout_constraintTop_toBottomOf="@+id/text_organ" />

</androidx.constraintlayout.widget.ConstraintLayout>